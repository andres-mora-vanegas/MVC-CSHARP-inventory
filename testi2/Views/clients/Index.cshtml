@model IEnumerable<testi2.Context.tb_clients>

@{
    ViewBag.Title = "Index";
}

<h2>Reporte de clientes</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create", new { id = "" }, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("description", "NIT")
        </th>
        <th>
            @Html.Label("description", "Nombre de la empresa")
        </th>
        <th>
            @Html.Label("description", "Nombres del contacto")
        </th>
        <th>
            @Html.Label("description", "Apellidos del contacto")
        </th>
        <th>
            @Html.Label("description", "Teléfono")
        </th>
        <th>
            @Html.Label("description", "Celular")
        </th>
        <th>
            @Html.Label("description", "Email")
        </th>
        <th>
            @Html.Label("description", "Fecha de creación")
        </th>
        <th>
            @Html.Label("description", "Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cli_nit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_name_company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_name_contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_last_name_contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_cel_phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tb_state.sta_name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.cli_id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.cli_id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.cli_id })
        </td>
    </tr>
}

</table>
